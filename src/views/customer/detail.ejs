<!DOCTYPE html>
<html lang="en" data-bs-theme="<%= darkMode ? 'dark' : 'light' %>">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <%- include('../partials/cdn') %>
        <title>Detail info</title>

        <style>
            input[type='number']::-webkit-inner-spin-button,
            input[type='number']::-webkit-outer-spin-button {
                -webkit-appearance: none;
                margin: 0;
            }

            #more-btn:hover,
            #less-btn:hover {
                cursor: pointer;
                text-decoration: underline;
            }

            /* Custom carousel */
            .carousel-inner.related-book {
                display: flex;
            }

            .carousel-item.related-book {
                display: block;
                margin-right: 0;
                cursor: pointer;
                flex: 0 0 calc(100% / 2);
            }

            @media screen and (min-width: 768px) {
                .carousel-inner.related-book {
                    display: flex;
                }

                .carousel-item.related-book {
                    display: block;
                    margin-right: 0;
                    cursor: pointer;
                    flex: 0 0 calc(100% / 4);
                }
            }

            @media screen and (min-width: 992px) {
                .carousel-inner.related-book {
                    display: flex;
                }

                .carousel-item.related-book {
                    display: block;
                    margin-right: 0;
                    cursor: pointer;
                    flex: 0 0 calc(100% / 6);
                }
            }

            .carousel-inner.related-book {
                padding: 1em;
            }

            .related-cover-wrapper {
                margin: 0 0.5em;
            }

            .related-cover-wrapper img {
                max-width: 100%;
                aspect-ratio: 8 / 11;
                object-fit: cover;
            }

            .carousel-control-prev.related-book,
            .carousel-control-next.related-book {
                width: 50px;
                height: 50px;
                background-color: #e1e1e1;
                border-radius: 50%;
                top: 50%;
                transform: translateY(-50%);
                opacity: 0.5;
            }

            .carousel-control-prev.related-book:hover,
            .carousel-control-next.related-book:hover {
                opacity: 1;
            }
        </style>
    </head>
    <body>
        <%- include('../partials/header') %>

        <main>
            <div class="py-2 bg-body-secondary">
                <div class="container">
                    <div class="card shadow border-0 my-3">
                        <div class="card-header text-bg-dark py-3">
                            <div class="row">
                                <div class="col-12 text-center">
                                    <h4 class="text-white text-uppercase"><%= book.title %></h4>
                                    <p class="text-white-50 fw-semibold mb-0">
                                        by <%= book.author %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="container p-2">
                                <div class="row g-0">
                                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                                        <div
                                            id="myCarousel"
                                            class="carousel slide"
                                            data-bs-ride="carousel"
                                        >
                                            <ol class="carousel-indicators list-unstyled">
                                                <li
                                                    data-bs-target="#myCarousel"
                                                    data-bs-slide-to="0"
                                                    class="active"
                                                ></li>
                                                <li
                                                    data-bs-target="#myCarousel"
                                                    data-bs-slide-to="1"
                                                ></li>
                                            </ol>

                                            <div
                                                class="carousel-inner h-0"
                                                style="padding-bottom: 125%"
                                            >
                                                <div class="carousel-item position-absolute active">
                                                    <img
                                                        class="d-block w-100 h-100"
                                                        src="<%= book.front_cover_image %>"
                                                        alt="First slide"
                                                    />
                                                </div>
                                                <div class="carousel-item position-absolute">
                                                    <img
                                                        class="d-block w-100 h-100"
                                                        src="<%= book.back_cover_image %>"
                                                        alt="Second slide"
                                                    />
                                                </div>
                                            </div>

                                            <a
                                                class="carousel-control-prev"
                                                href="#myCarousel"
                                                role="button"
                                                data-bs-slide="prev"
                                            >
                                                <span class="carousel-control-prev-icon"></span>
                                                <span class="sr-only">Previous</span>
                                            </a>

                                            <a
                                                class="carousel-control-next"
                                                href="#myCarousel"
                                                role="button"
                                                data-bs-slide="next"
                                            >
                                                <span class="carousel-control-next-icon"></span>
                                                <span class="sr-only">Next</span>
                                            </a>
                                        </div>
                                    </div>

                                    <div class="col-12 col-lg-6 offset-lg-1">
                                        <div class="col-12 col-md-6 pb-4">
                                            <span class="badge rounded-pill bg-warning px-3 py-2">
                                                <%= book.genre.name %>
                                            </span>
                                        </div>
                                        <div class="row">
                                            <p class="text-body-emphasis mb-0">
                                                <span class="fw-bold">ISBN:</span>
                                                <span class="text-secondary"><%= book.isbn %></span>
                                            </p>
                                        </div>
                                        <div class="row">
                                            <h6 class="text-body-emphasis pb-2">
                                                <span class="fw-bold">Price:</span>
                                                <span class="text-success">
                                                    $<%= book.price %>
                                                </span>
                                            </h6>
                                        </div>

                                        <div class="row my-3">
                                            <p
                                                id="description"
                                                class="text-secondary"
                                                style="text-align: justify"
                                            ></p>
                                        </div>

                                        <form id="add-to-cart-form" action="" method="post">
                                            <div class="row">
                                                <div class="col">
                                                    <h6 class="text-body-emphasis">Quantity:</h6>
                                                </div>
                                            </div>

                                            <div class="row mb-4">
                                                <div class="col-lg-4 col-md-6 mb-lg-0">
                                                    <div class="d-flex w-100 input-group">
                                                        <span
                                                            class="btn btn-outline-success px-3 input-group-text"
                                                            onclick="this.parentNode.querySelector('input[type=number]').stepDown()"
                                                        >
                                                            <i class="fas fa-minus"></i>
                                                        </span>

                                                        <input
                                                            min="<%= book.max_quantity > 0 ? 1 : 0 %>"
                                                            max="<%= book.max_quantity %>"
                                                            class="form-control text-center border-success border-start-0"
                                                            name="quantity"
                                                            value="<%= book.max_quantity > 0 ? 1 : 0 %>"
                                                            type="number"
                                                            id="input-quantity"
                                                        />

                                                        <span
                                                            class="btn btn-outline-success px-3 input-group-text"
                                                            onclick="this.parentNode.querySelector('input[type=number]').stepUp()"
                                                        >
                                                            <i class="fas fa-plus"></i>
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="col-lg-4 col-md-6">
                                                    <h6
                                                        class="text-body-emphasis mb-0"
                                                        style="line-height: 32px"
                                                    >
                                                        In stock:
                                                        <span class="text-danger fs-3"
                                                            ><%= book.stock_quantity %></span
                                                        >
                                                    </h6>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-12 col-lg-5 pb-1">
                                                    <button
                                                        class="btn bg-warning text-light form-control bg-gradient py-2 text-uppercase fw-semibold"
                                                    >
                                                        <span class="me-1">Add to Cart</span>
                                                        <i class="fa-solid fa-cart-shopping"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card shadow border-0 my-2">
                        <div
                            class="card-header py-3 d-flex flex-row align-items-center justify-content-between"
                        >
                            <h5 class="m-0 text-danger">
                                <i class="fa-solid fa-book-bible"></i> Related books
                            </h5>
                        </div>
                        <div class="card-body p-3">
                            <div class="datatable-area scroll-container overflow-auto">
                                <div id="carouselRelatedBooks" class="carousel">
                                    <div class="carousel-inner related-book">
                                        <% relatedBooks.forEach((book, index) => { %>
                                        <a
                                            class="carousel-item <%= index == 1 ? 'active' : '' %> related-book"
                                            href="/customer/detail/<%= book.id %>"
                                            title="<%= book.title %>"
                                        >
                                            <div class="related-cover-wrapper">
                                                <img
                                                    src="<%= book.front_cover_image %>"
                                                    class="d-block w-100"
                                                    alt="Book cover"
                                                />
                                            </div>
                                            <!-- <div class="carousel-caption d-none d-md-block p-0">
                                                <h5
                                                    class="m-0 text-light"
                                                    style="
                                                        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
                                                    "
                                                >
                                                    <%= book.title %>
                                                </h5>
                                            </div> -->
                                        </a>
                                        <% }); %>
                                    </div>
                                    <button
                                        class="carousel-control-prev related-book"
                                        type="button"
                                        data-bs-target="#carouselRelatedBooks"
                                        data-bs-slide="prev"
                                    >
                                        <span
                                            class="carousel-control-prev-icon"
                                            aria-hidden="true"
                                        ></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button
                                        class="carousel-control-next related-book"
                                        type="button"
                                        data-bs-target="#carouselRelatedBooks"
                                        data-bs-slide="next"
                                    >
                                        <span
                                            class="carousel-control-next-icon"
                                            aria-hidden="true"
                                        ></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <%- include('../partials/footer') %>
        <script>
            $(() => {
                // Handle read more / less
                let content = `<%= book.description %>`;
                const contentArray = content.split(/\s+/);

                if (contentArray.length > 100) {
                    const showContent = contentArray.splice(0, 100);
                    const hideContent = contentArray;

                    $('#description').html(`
                        ${showContent.join(' ')}
                        <span id="dots">...
                            <span id="more-btn" class="fw-bold text-nowrap">
                                Read more
                            </span>
                        </span>
                        <span id="more-content" class="d-none">
                            ${hideContent.join(' ')}
                        </span>
                        <span id="less-btn" class="fw-bold text-nowrap d-none">
                                Read less
                        </span>
                    `);

                    $('#more-btn').click(function () {
                        $('#dots').addClass('d-none');
                        $('#more-content').removeClass('d-none');
                        $('#less-btn').removeClass('d-none');
                    });

                    $('#less-btn').click(function () {
                        $('#dots').removeClass('d-none');
                        $('#more-content').addClass('d-none');
                        $('#less-btn').addClass('d-none');
                    });
                } else {
                    $('#description').html(`${contentArray.join(' ')}`);
                }

                // Handle quantity
                const inputQuantity = $('#input-quantity');
                const maxQuantity = Number(inputQuantity.attr('max'));
                inputQuantity.blur((e) => {
                    const value = inputQuantity.val();
                    if (value < 0) {
                        inputQuantity.val(0);
                    } else if (value > maxQuantity) {
                        inputQuantity.val(maxQuantity);
                    }
                });

                $('#add-to-cart-form').submit((e) => {
                    if (inputQuantity.val() == 0) {
                        e.preventDefault();
                    }
                });

                // Handle carousel
                let multipleCardCarousel = document.querySelector('#carouselRelatedBooks');
                let numOfCard = 3;
                if (window.matchMedia('(min-width: 768px)').matches) {
                    numOfCard = 5;
                } else if (window.matchMedia('(min-width: 992px)').matches) {
                    numOfCard = 7;
                }
                let carouselWidth = $('.carousel-inner.related-book')[0].scrollWidth;
                let cardWidth = $('.carousel-item.related-book').width();
                let scrollPosition = 0;

                $('.carousel-control-next.related-book').click((e) => {
                    if (scrollPosition < carouselWidth - cardWidth * numOfCard) {
                        //check if you can go any further
                        scrollPosition += cardWidth; //update scroll position
                        $('.carousel-inner.related-book').animate(
                            { scrollLeft: scrollPosition },
                            600
                        ); //scroll left
                    }
                });

                $('.carousel-control-prev.related-book').on('click', function () {
                    if (scrollPosition > 0) {
                        scrollPosition -= cardWidth;
                        $('.carousel-inner.related-book').animate(
                            { scrollLeft: scrollPosition },
                            600
                        );
                    }
                });

                let carousel = new bootstrap.Carousel(multipleCardCarousel, {
                    interval: false,
                });
            });
        </script>

        <% if(typeof successMessage !== 'undefined') { %>
        <script>
            toastr.options.timeOut = 1500;
            toastr.success('<%= successMessage %>');
        </script>
        <% } %> <% if(typeof failMessage !== 'undefined') { %>
        <script>
            toastr.options.timeOut = 1500;
            toastr.error('<%= failMessage %>');
        </script>
        <% } %>
    </body>
</html>
